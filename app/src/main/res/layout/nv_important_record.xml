<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/imp_top_bar"
        style="@style/action_bar_style"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            style="@style/actionbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:maxLines="1"
            android:text="Important Record" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_important_record"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:tint="@color/grey_dark"
            android:src="@drawable/ic_footprint"
            android:contentDescription="@string/direction_image"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>