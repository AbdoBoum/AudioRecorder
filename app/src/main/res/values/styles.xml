<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- action bar -->
    <style name="action_bar_style">
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- action bar title -->
    <style name="actionbar_title">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- action bar settings button -->
    <style name="actionbar_settings_buttons">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/ic_dots</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!-- action bar settings button -->
    <style name="actionbar_back_buttons">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/ic_arrow_left</item>
        <item name="android:tint">@color/white</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

</resources>
